<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BuscarDocumentoPagoActivity" >

    <TextView
        android:id="@+id/lblNroCobranzaBuscarDocumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/blanco" />

    <TextView
        android:id="@+id/lblClienteBuscarDocumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblNroCobranzaBuscarDocumento"
        android:layout_below="@+id/lblNroCobranzaBuscarDocumento"
        android:text="@string/blanco" />

    <EditText
        android:id="@+id/txtFiltroBuscarDocumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblClienteBuscarDocumento"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblClienteBuscarDocumento"
        android:ems="10"
        android:hint="@string/buscarDocumento"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtFiltroBuscarDocumento"
        android:layout_below="@+id/txtFiltroBuscarDocumento" >
    </ListView>

</RelativeLayout>
