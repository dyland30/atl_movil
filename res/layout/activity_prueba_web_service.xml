<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PruebaWebServiceActivity" >

    <TextView
        android:id="@+id/lblVisitaRegistrarCobranzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="URL" />

    <EditText
        android:id="@+id/txtWebServiceURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblVisitaRegistrarCobranzas"
        android:ems="10"
        android:inputType="textUri"
        android:text="http://localhost:1186/PersonaServ/" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtWebServiceRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtWebServiceURL"
        android:layout_below="@+id/txtWebServiceURL"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnWebServiceGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtWebServiceURL"
        android:layout_toRightOf="@+id/txtWebServiceURL"
        android:drawableLeft="@drawable/ic_action_search"
        android:text="@string/blanco" />

</RelativeLayout>
