<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owlsoft.encnotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.owlsoft.encnotes.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.owlsoft.encnotes.ActNuevaNota"
            android:label="@string/title_activity_act_nueva_nota" >
        </activity>
        <activity
            android:name="com.owlsoft.encnotes.LogInActivity"
            android:label="@string/title_activity_log_in" >
        </activity>
        <activity
            android:name="com.owlsoft.encnotes.ActRegistrarUsuario"
            android:label="@string/title_activity_act_registrar_usuario" >
        </activity>
    </application>

</manifest>